<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileUser">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/tool"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/arrow_back"

                android:id="@+id/img_arrow"
                android:layout_width="40dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_alignBaseline="@id/img_arrow"
                android:layout_toRightOf="@+id/img_arrow"
                android:text="Payment"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <ScrollView
            android:layout_below="@id/tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:gravity="center"
                        android:id="@+id/add_money_towallet"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Add money to wallet"

                        />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:layout_below="@id/tool"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/addmoney"
                    android:layout_marginBottom="10dp"
                    android:text="Add Money"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_round"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    />
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="30dp"
                    android:orientation="vertical"
                    android:background="@drawable/profile_backgroubd"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:text="Payment E-Collect"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="Account Title"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                        <TextView
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"

                            android:clickable="false"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ICOGNITIVE GLOBAL PRIVATE LIMITED NODAL AC"
                          />

                    <TextView

                        android:layout_marginTop="15dp"
                        android:text="Beneficiary Acoount Number"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/benificary"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"

                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                    <TextView

                        android:layout_marginTop="15dp"
                        android:text="IFSC"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView

                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="YESB0CMSNOC (5th alphabet is zero)"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                    <TextView

                        android:layout_marginTop="15dp"
                        android:text="Bank Name"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView

                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="YES Bank"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>






    </RelativeLayout>


</LinearLayout>