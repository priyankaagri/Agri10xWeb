<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"

    app:ignore="NamespaceTypo">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="35dp"
            android:orientation="vertical"
            android:background="@drawable/ractangle_background"
            android:layout_height="155dp">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/make"
            android:layout_width="wrap_content"
            android:layout_height="140dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp"
                android:background="@drawable/circle"
                android:scaleType="centerCrop"
                app:civ_shadow_color = "#F2F2F2"
                />

            <!-- <androidx.cardview.widget.CardView
                 android:layout_width="140dp"
                 android:layout_height="140dp"
                 android:background="@color/offgrey"
                 app:cardCornerRadius="80dp"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
                 >
                 <com.mikhaellopez.circularimageview.CircularImageView
                     android:id="@+id/imageView"
                     android:background="@color/offgrey"
                     android:layout_width="140dp"
                     android:layout_height="140dp"
                     android:scaleType="centerCrop"
                     />

             </androidx.cardview.widget.CardView>-->
        </RelativeLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/make"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/commoditynamestocklist"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/appgreen"
android:layout_marginBottom="15dp"

                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="10dp"
                   />

                <TextView
android:id="@+id/sell"
                    android:background="@drawable/btn_round"
                    android:text="SELL"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tab_indicator_gray"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/unitstocklist"
                        android:layout_width="match_parent"
                        android:text="Unit"
                        android:textSize="12dp"
                        android:textColor="@color/textgrey"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/perishable_stock_list"
                        android:layout_width="match_parent"
                        android:text="Unit"
                        android:textSize="12dp"
                        android:textColor="@color/textgrey"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/entrytime_stock_list"
                        android:layout_width="match_parent"
                        android:text="Unit"
                        android:textSize="12dp"
                        android:textColor="@color/textgrey"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/quantitystocklist"
                        android:layout_width="match_parent"
                        android:text="Unit"
                        android:textSize="12dp"
                        android:textColor="@color/textgrey"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/coldStorage_stock_list"
                        android:layout_width="match_parent"
                        android:text="Unit"
                        android:textSize="12dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/textgrey"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:id="@+id/blockQuantity_stock_list"
                        android:layout_width="match_parent"
                        android:text="Unit"
                        android:textSize="12dp"
                        android:textColor="@color/textgrey"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>






</RelativeLayout>
