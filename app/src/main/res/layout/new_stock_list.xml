<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/image_stock_list"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/applogo"
           />

        <TextView
            android:id="@+id/commoditynamestocklist"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/qualitystocklist"
            android:layout_marginTop="8dp"
            android:textSize="12sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:background="@color/appgreen"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/unitstocklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/my_stock_small_text"></TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/quantitystocklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/my_stock_small_text" />

        <TextView
            android:id="@+id/perishable_stock_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/my_stock_small_text"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/coldStorage_stock_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="@dimen/my_stock_small_text" />

        <TextView
            android:id="@+id/entrytime_stock_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="@dimen/my_stock_small_text" />

        <TextView
            android:id="@+id/blockQuantity_stock_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="@dimen/my_stock_small_text" />
    </LinearLayout>
    </LinearLayout>
   </LinearLayout>