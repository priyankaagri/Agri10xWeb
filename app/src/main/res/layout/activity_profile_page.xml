<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#f4f1f1"
        android:theme="@style/AppTheme.NoActionBar"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextColor="@android:color/white"
            app:theme="@style/ThemeOverlay.AppCompat"
            android:background="@color/colourBlack"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ProfilePage"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="405dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@color/appgreen"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userImageProfilePage"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="45dp"
                            android:src="@drawable/user_image_placeholder" />

                        <TextView
                            android:id="@+id/usernameProfilePage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="Account Holder"
                            android:textColor="#fff"
                            android:textSize="21sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="275dp"
                        android:elevation="50dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        card_view:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="false" android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/role"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginEnd="8dp"
                                        android:text="Role"
                                        android:textSize="15dp"
                                        card_view:layout_constraintEnd_toEndOf="parent"
                                        card_view:layout_constraintStart_toStartOf="parent"
                                        card_view:layout_constraintTop_toTopOf="parent" />

                                    <ImageView
                                        android:id="@+id/image_role"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginBottom="8dp"
                                        android:gravity="center"
                                        android:minWidth="40dp"
                                        android:minHeight="40dp"
                                        android:src="@drawable/person_placeholder"
                                        card_view:layout_constraintBottom_toBottomOf="parent"
                                        card_view:layout_constraintEnd_toEndOf="parent"
                                        card_view:layout_constraintStart_toStartOf="parent"
                                        card_view:layout_constraintTop_toBottomOf="@+id/role" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginEnd="8dp"
                                        android:text="Registered On"
                                        android:textSize="15dp"
                                        card_view:layout_constraintEnd_toEndOf="parent"
                                        card_view:layout_constraintStart_toStartOf="parent"
                                        card_view:layout_constraintTop_toTopOf="parent" />

                                    <TextView
                                        android:id="@+id/entry_date"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"

                                        android:layout_marginTop="20dp"
                                        android:layout_marginEnd="8dp"
                                        android:isIndicator="true"
                                        android:numStars="5"
                                        android:text="dd/mm/yyyy"
                                        android:stepSize="0.1"
                                        card_view:layout_constraintEnd_toEndOf="parent"
                                        card_view:layout_constraintStart_toStartOf="parent"
                                        card_view:layout_constraintTop_toBottomOf="@+id/textView2" />
                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/KYC"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginEnd="8dp"
                                        android:text="KYC"
                                        android:textSize="15dp"
                                        card_view:layout_constraintEnd_toEndOf="parent"
                                        card_view:layout_constraintStart_toStartOf="parent"
                                        card_view:layout_constraintTop_toTopOf="parent" />

                                    <ImageView
                                        android:id="@+id/kyc_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginBottom="8dp"
                                        android:gravity="center"
                                        android:minWidth="40dp"
                                        android:minHeight="40dp"
                                        android:src="@drawable/kyc_not_done"
                                        card_view:layout_constraintBottom_toBottomOf="parent"
                                        card_view:layout_constraintEnd_toEndOf="parent"
                                        card_view:layout_constraintStart_toStartOf="parent"
                                        card_view:layout_constraintTop_toBottomOf="@+id/KYC" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/email_icon"/>
                        <TextView
                            android:id="@+id/user_email"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="xyz@gmail.com"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/phone_icon"/>
                        <TextView
                            android:id="@+id/user_pno"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="xxxxxxxxxx"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:paddingLeft="25dp"
                        android:paddingBottom="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address:"
                            android:textSize="20sp"/>
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_gravity="left"
                            android:layout_width="310dp"
                            android:layout_height="wrap_content"
                            card_view:cardCornerRadius="10dp"
                            android:paddingLeft="25dp"
                            >
                            <FrameLayout
                                android:background="@drawable/address_cardview_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                            <TextView
                                android:id="@+id/addressdata"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="30dp"
                                android:paddingTop="10dp"
                                android:text="Your Address"/>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>


