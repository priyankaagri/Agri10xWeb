<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UpdateNumber">
    <RelativeLayout
        android:id="@+id/tool"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:src="@drawable/arrow_back"

            android:id="@+id/img_arrow"
            android:layout_width="40dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignBaseline="@id/img_arrow"
            android:layout_toRightOf="@+id/img_arrow"
            android:text="Update Number"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:text="Update your mobile number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/grey"
        android:text="Will be verified in the next step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <com.google.android.material.textfield.TextInputLayout
         android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mobilenumberedt"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/sendotp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_round"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        android:text="Update"
        android:textAlignment="center"/>
</LinearLayout>